<h1>Books</h1>


  
<th>Title</th>
<th>Body</th>
 
 <br>
 <% @books.each do |book| %>
  <div>
    <%= link_to book.title, book_path(book.id) %>
  </div>

<% end %>




 <h2>New book</h2>
 
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
 <ul>
  
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
 </ul>
 
 <% end %>
 
 <%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>
  
  
  <h5>Body</h5>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>
