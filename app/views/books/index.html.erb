<h1>Books</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  
<th>Title</th>
<th>Body</th>
 
 <br>
 <% @books.each do |book| %>
  <div>
    <%= link_to book.title, books_path(book.id) %>
  </div>

<% end %>
 <h2>New book</h2>

  <h5>Title</h5>
  <%= f.text_field :title %>
  
  
  <h5>Body</h5>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>
